<%-include('./partials/header')%>
<%-include('./partials/navbar')%>
<div class="container d-flex flex-column justify-content-center align-items-center ">
  <div><a class="btn btn-success edit" href="/edit/?data=<%=data%>">Twoje Blogi <%=data1%></a></div>
  <h1 class="text-center">
    <%=data1%> write your blog <img src="https://pngimg.com/uploads/pen/pen_PNG7404.png" alt="" width="5%">
  </h1>

  <form action="/write/" method="post" class="row w-75 ">
    <div class="mb-3 ">
      <label for="title" class="form-label">Title</label>
      <input type="text" class="form-control " id="title" name="title" placeholder="Title....." required>
    </div>
    <div class="mb-3 ">
      <label for="photo" class="form-label">Photo</label>
      <input type="text" class="form-control " id="photo" name="photo" placeholder="https://image.png">
    </div>
    <div class="mb-3">
      <label for="text" class="form-label">Text</label>
      <textarea name="text" id="text" rows="2" placeholder="Lorem ipsum..."></textarea>
    </div>

    <div class="mb-3">
      <button type="submit" class="btn color text-light mb-3">Save</button>
    </div>
    <input type="hidden" class="form-control " id="username" name="username" value="<%=data%>">
  </form>
</div>
<script>
  input = document.getElementById("search");
  btn = document.getElementById("searchBtn");
  input.style.display = "none";
  btn.style.display = "none";
</script>
<%-include('./partials/footer')%>